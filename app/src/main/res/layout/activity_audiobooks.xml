<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.justears.activity_audiobooks">">

<TextView
        android:id="@+id/listenbooks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/primary_dark_color"
        android:text="@string/category_txtaudiobooks" />

    <Button
        android:id="@+id/Buttonbooks"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/col_listenbooks"
        android:text="@string/btn_playNow" />
</LinearLayout>


